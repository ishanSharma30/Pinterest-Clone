<% include ./partials/header.ejs%>
  <div class="w-full h-screen bg-center bg-cover bg-[url(https://images.unsplash.com/photo-1705922048295-4427b2da74d1?w=1000&auto=format&fit=crop&q=60&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxlZGl0b3JpYWwtZmVlZHwzfHx8ZW58MHx8fHx8)] flex items-center justify-center">
